@model EmpleadoViewModel;

<h1>Crear empleado</h1>

<form asp-action="Crear" asp-controller="Empleado" method="post">
    <div class="mb-3">
        <input asp-for="FullName" type="type" class="form-control" placeholder="Full Name"/>
        <span asp-validation-for="FullName" class="badge text-warning"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Age" type="type" class="form-control" placeholder="Age" />
    </div>
    <div class="form-group">
        <label asp-for="EmpresaId" class="control-label">Empresa</label>
        <select asp-for="EmpresaId" class="form-control" asp-items="ViewBag.Empresa"></select>
        <span asp-validation-for="EmpresaId" class="text-danger"></span>
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Empleado" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>