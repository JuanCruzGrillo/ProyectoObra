@model List<ProyectoObra.Domain.Entities.Empresa>
<h1>Empresas</h1>

<script src="https://cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"></script>
<a asp-controller="Empresa" asp-action="Create" class="btn btn-primary mb-3">Create Empresa</a>

<table id="dt2" class="table table-striped">
    <thead>
        <tr class="bg-primary text-white">
            @foreach (var empresa in Model[0].GetType().GetProperties())
            {
                <th>@empresa.Name</th>
            }
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empresa in Model)
        {
            <tr>
                <td>@empresa.Id</td>
                <td>@empresa.Descripcion</td>
                <td>
                    <a asp-controller="Empresa" asp-action="Edit" asp-route-id="@empresa.Id" class="btn btn-info"><i class="bi bi-pencil"></i></a>
                    <a asp-controller="Empresa" asp-action="Delete" asp-route-id="@empresa.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>