@model ProyectoObra.Domain.Entities.Empresa;

<h1>Form Delete</h1>

<form asp-action="Destroy" asp-controller="Empresa" method="post">
    <input asp-for="Id" type="number" hidden />
    <div class="mb-3">
        <input asp-for="Descripcion" type="type" class="form-control" placeholder="Descripcion" disabled/>
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-controller="Empresa" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>