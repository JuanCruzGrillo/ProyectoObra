@model ProductoViewModel;

<h1>Actualizar</h1>

<form asp-action="Update" asp-controller="Producto" method="post">
    <input asp-for="Id" type="number" hidden/>
    <div class="mb-3">
        <input asp-for="Descripcion" type="type" class="form-control" placeholder="Descripcion" />
    </div>
    <div class="form-group">
        <label asp-for="CategoriaId" class="control-label"></label>
        <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.Categoria"></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RubroId" class="control-label"></label>
        <select asp-for="RubroId" class="form-control" asp-items="ViewBag.Rubro"></select>
        <span asp-validation-for="RubroId" class="text-danger"></span>
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-info">Actualizar</button>
        <a asp-controller="Producto" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>