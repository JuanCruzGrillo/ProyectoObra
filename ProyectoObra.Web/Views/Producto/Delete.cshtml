@model ProductoViewModel;

<h1>Eliminar productos</h1>

<form asp-action="Destroy" asp-controller="Producto" method="post">
    <input asp-for="Id" type="number" hidden />
    <div class="mb-3">
        <input asp-for="Descripcion" type="type" class="form-control" placeholder="Descripcion" disabled />
    </div>
    <div class="mb-3">
        <input asp-for="CategoriaId" type="type" class="form-control" placeholder="idEmpresa" disabled />
    </div>  
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-controller="Producto" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>