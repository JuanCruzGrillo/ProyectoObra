@model List<ProyectoObra.Domain.Entities.Producto>
<h1>Producto</h1>

<a asp-controller="Producto" asp-action="Create" class="btn btn-primary mb-3">Create Producto</a>

<table id="dt2" class="table table-striped">
    <thead>
        <tr class="bg-primary text-white">
      <th>Descripcion</th>
            <th>Categoria</th>
            <th>Rubro</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var productos in Model)
        {
            <tr>
                <td>@productos.Descripcion</td>
                <td>@productos.Categoria.Descripcion</td>
                <td>@productos.Rubro.Descripcion</td>
                <td>@productos.Precio</td>
                <td>
                    <a asp-controller="Producto" asp-action="Edit" asp-route-id="@productos.Id" class="btn btn-info"><i class="bi bi-pencil"></i></a>
                    <a asp-controller="Producto" asp-action="Delete" asp-route-id="@productos.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
