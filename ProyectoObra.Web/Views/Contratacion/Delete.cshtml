@model ContratacionViewModel;
<h1>Eliminar contratacion</h1>

<form asp-action="Destroy" asp-controller="Contratacion" method="post">
    <input asp-for="Id" type="number" hidden />
    <div class="mb-3">
        <input asp-for="Descripcion" type="type" class="form-control" placeholder="Descripcion" disabled />
    </div>
    <div class="form-group">
        <label asp-for="EmpresaId" class="control-label">Empresa</label>
        <select asp-for="EmpresaId" class="form-control" asp-items="ViewBag.Empresa" disabled></select>
        <span asp-validation-for="EmpresaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaInicio" class="control-label"></label>
        <input asp-for="FechaInicio" type="date" class="form-control" disabled />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>

    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-controller="Contratacion" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>