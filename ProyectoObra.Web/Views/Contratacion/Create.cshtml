@model ContratacionViewModel;
<h1>Crear Contratacion</h1>

<form asp-action="Crear" asp-controller="Contratacion" method="post">
    <div class="mb-3">
        <input asp-for="Descripcion" type="type" class="form-control" placeholder="Descripcion" />
        <span asp-validation-for="Descripcion" class="badge text-warning"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmpresaId" class="control-label"></label>
        <select asp-for="EmpresaId" class="form-control" asp-items="ViewBag.Empresa"></select>
        <span asp-validation-for="EmpresaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FechaInicio" class="control-label"></label>
        <input asp-for="FechaInicio" type="date" class="form-control" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Crear</button>
        <a asp-controller="Contratacion" asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
   
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}